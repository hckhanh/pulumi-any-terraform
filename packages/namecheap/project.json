{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "namecheap",
  "projectType": "library",
  "sourceRoot": "packages/namecheap/src",
  "targets": {
    "build": {
      "command": "node ./scripts/postinstall.js",
      "inputs": ["sources"],
      "outputs": ["{projectRoot}/bin"],
      "options": {
        "cwd": "packages/namecheap"
      }
    },
    "audit": {
      "command": "npm audit signature --no-package-lock",
      "inputs": ["{projectRoot}/package.json"],
      "options": {
        "cwd": "packages/namecheap"
      }
    },
    "syncpack:fix": {
      "command": "pnpm syncpack fix",
      "inputs": ["syncpack:workspace"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:format": {
      "command": "pnpm syncpack format",
      "inputs": ["syncpack"],
      "cache": true,
      "dependsOn": ["syncpack:fix"],
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:format:check": {
      "command": "pnpm syncpack format --check",
      "inputs": ["syncpack"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:lint": {
      "command": "pnpm syncpack lint",
      "inputs": ["syncpack:workspace"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "fix": {
      "dependsOn": ["syncpack:format"]
    }
  }
}
