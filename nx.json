{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "outputs": ["{projectRoot}/bin"],
      "dependsOn": ["^build"],
      "cache": true
    }
  },
  "namedInputs": {
    "sources": ["{projectRoot}/package.json", "{projectRoot}/**/*.ts"],
    "sources:all": ["{projectRoot}/**/*.{js,jsx,ts,tsx,cjs,cts,mjs,mts}"],
    "syncpack": [
      "{workspaceRoot}/**/package.json",
      "{workspaceRoot}/.syncpackrc.json",
      { "externalDependencies": ["syncpack"] }
    ],
    "syncpack:format": [
      "{projectRoot}/package.json",
      "{workspaceRoot}/.syncpackrc.json",
      { "externalDependencies": ["syncpack"] }
    ],
    "prettier": [
      "sources:all",
      "{workspaceRoot}/.prettierrc",
      "{workspaceRoot}/.prettierignore",
      "{workspaceRoot}/root.prettierignore",
      "{projectRoot}/**/*.{yml,yaml,json,md,html,css}",
      "!{projectRoot}/package.json",
      { "externalDependencies": ["prettier"] }
    ],
    "prettier:root": ["prettier", "!{workspaceRoot}/packages/**"],
    "biome": [
      "sources:all",
      "{projectRoot}/biome.json",
      { "externalDependencies": ["@biomejs/biome"] }
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "build": {
          "targetName": "build",
          "configName": "tsconfig.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        },
        "typecheck": false
      }
    },
    "./tools/biome.ts",
    "./tools/build.ts",
    "./tools/linter.ts",
    "./tools/prettier.ts"
  ],
  "sync": {
    "disabledTaskSyncGenerators": ["@nx/js:typescript-sync"]
  },
  "pluginsConfig": {
    "@nx/js": {
      "projectsAffectedByDependencyUpdates": "auto"
    }
  }
}
