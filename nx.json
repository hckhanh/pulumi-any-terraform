{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "outputs": ["{projectRoot}/bin"],
      "dependsOn": ["^build"],
      "cache": true
    }
  },
  "namedInputs": {
    "sources": ["{projectRoot}/package.json", "{projectRoot}/**/*.ts"],
    "sources:all": ["{projectRoot}/**/*.{js,jsx,ts,tsx,cjs,cts,mjs,mts}"],
    "syncpack": [
      "{projectRoot}/package.json",
      "{workspaceRoot}/.syncpackrc.json",
      { "externalDependencies": ["syncpack"] }
    ],
    "syncpack:workspace": [
      "{workspaceRoot}/**/package.json",
      "{workspaceRoot}/.syncpackrc.json",
      { "externalDependencies": ["syncpack"] }
    ],
    "prettier": [
      "sources:all",
      "{workspaceRoot}/.prettierrc",
      "{projectRoot}/**/*.{yml,yaml,json,md,html,css}",
      "!{projectRoot}/package.json",
      { "externalDependencies": ["prettier"] }
    ],
    "prettier:root": ["prettier", "!{workspaceRoot}/packages/**"]
  },
  "plugins": [
    "./tools/audit.ts",
    "./tools/build.ts",
    "./tools/linter.ts",
    "./tools/prettier.ts",
    "./tools/syncpack.ts"
  ],
  "release": {
    "projects": ["packages/**/*"],
    "projectsRelationship": "independent",
    "versionPlans": true,
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    }
  },
  "s3": {
    "region": "auto",
    "bucket": "nx-caches",
    "forcePathStyle": true,
    "localMode": "no-cache"
  }
}
