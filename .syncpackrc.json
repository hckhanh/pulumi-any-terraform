{
  "$schema": "./node_modules/syncpack/schema.json",
  "sortFirst": [
    "name",
    "description",
    "version",
    "productName",
    "author",
    "homepage",
    "repository",
    "private",
    "sideEffects",
    "type",
    "main",
    "module",
    "types",
    "exports",
    "scripts",
    "dependencies",
    "devDependencies",
    "peerDependencies",
    "trustedDependencies",
    "workspaces",
    "packageManager"
  ],
  "sortExports": ["import", "types"],
  "sortAz": [
    "exports",
    "scripts",
    "workspaces",
    "dependencies",
    "devDependencies",
    "peerDependencies",
    "trustedDependencies"
  ],
  "versionGroups": [
    {
      "dependencies": ["**"],
      "dependencyTypes": ["peer"],
      "packages": ["**"],
      "isIgnored": true
    }
  ],
  "semverGroups": [
    {
      "label": "All dependencies must be pinned, except non-peer and pnpmOverrides dependencies",
      "dependencyTypes": ["!resolutions", "!pnpmOverrides"],
      "dependencies": ["**"],
      "packages": ["**"],
      "range": ""
    }
  ]
}
