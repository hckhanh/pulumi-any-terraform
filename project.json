{
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "name": "root",
  "projectType": "library",
  "namedInputs": {
    "syncpack": [
      "{projectRoot}/package.json",
      "{workspaceRoot}/.syncpackrc.json"
    ]
  },
  "targets": {
    "syncpack:fix": {
      "command": "bun syncpack fix",
      "inputs": ["syncpack:workspace"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:format": {
      "command": "bun syncpack format",
      "inputs": ["syncpack"],
      "cache": true,
      "dependsOn": ["syncpack:fix"],
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:format:check": {
      "command": "bun syncpack format --check",
      "inputs": ["syncpack"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "syncpack:lint": {
      "command": "bun syncpack lint",
      "inputs": ["syncpack:workspace"],
      "cache": true,
      "options": {
        "source": "{projectRoot}/package.json"
      }
    },
    "fix": {
      "dependsOn": ["syncpack:format"]
    }
  }
}
