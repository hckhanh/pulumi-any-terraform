{
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "name": "root",
  "projectType": "library",
  "targets": {
    "prettier:check": {
      "inputs": ["prettier:root"],
      "options": {
        "ignore-path": "root.prettierignore"
      }
    },
    "prettier:write": {
      "inputs": ["prettier:root"],
      "options": {
        "ignore-path": "root.prettierignore"
      }
    },
    "audit": {
      "command": "pnpm audit",
      "inputs": ["{projectRoot}/pnpm-lock.yaml"],
      "metadata": {
        "description": "Check for security vulnerabilities in your dependencies",
        "technologies": ["node"]
      }
    },
    "audit:fix": {
      "command": "pnpm audit --fix",
      "inputs": ["{projectRoot}/pnpm-lock.yaml"],
      "metadata": {
        "description": "Check for and fix security vulnerabilities in your dependencies",
        "technologies": ["node"]
      }
    },
    "check": {
      "dependsOn": [
        "audit",
        "audit:signatures",
        "build",
        "prettier:check",
        "syncpack:format:check",
        "syncpack:lint"
      ]
    },
    "fix": {
      "dependsOn": ["audit:fix", "prettier:write", "syncpack:format"]
    }
  }
}
